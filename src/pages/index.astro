				#scroll-indicator {
					bottom: 7%;
				}

				#name {
					font-size: 10vw;
					display: flex;
					flex-direction: column;
					align-items: center;
				}

				#name-line1,
				#name-line2 {
					font-size: 9vw;
					line-height: 1.2;
				}

				#intro {
					font-size: 12vw;
					line-height: 1.2;
				}

				#links {
					position: static; /* Remove fixed positioning on mobile */
					margin: 0;
					display: flex;
					align-items: center;
				}

