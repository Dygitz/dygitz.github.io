---
import Github from './github.svelte';
import Linkedin from './linkedin.svelte';
import Email from './email.svelte';
---

<div class="social-links-container">
	<div id="links">
		<a href="https://www.linkedin.com/in/dominik-ritz/" target="_blank">
			<Linkedin width="50px" height="50px" />
		</a>
		<a href="https://github.com/Dygitz" target="_blank">
			<Github width="50px" height="50px" />
		</a>
	</div>
	<div id="email-container">
		<a id="email" href="mailto:dom_ritz@icloud.com" target="_blank">
			<Email width="80px" height="60px" />
		</a>
	</div>
</div>

<style>
	.social-links-container {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		width: auto;
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
		align-items: flex-end;
		padding: 10px 12px;
		background: linear-gradient(
			to top,
			rgba(4, 4, 10, 0.98) 0%,
			rgba(6, 6, 18, 0.9) 45%,
			rgba(8, 8, 22, 0.6) 70%,
			transparent 100%
		);
		z-index: 100;
	}

	#links {
		display: flex;
		align-items: flex-end;
		gap: 0.6vw;
		min-width: 0;
		width: auto;
		text-align: left;
		z-index: 4;
	}

	#links a {
		color: transparent;
		display: inline-flex;
	}

	:global(.links-icons:hover path) {
		fill: #6d18e2;
		transition: fill 0.4s ease;
	}

	#email-container {
		display: flex;
		align-items: flex-end;
		min-width: 0;
		padding: 0;
		z-index: 100;
	}

	#email {
		border: none;
		border-radius: 5px;
		cursor: pointer;
		margin-left: 1vw;
		display: inline-flex;
	}

	#links svg,
	#email svg {
		display: block;
	}

	/* Mobile responsive */
	@media (max-width: 767px) {
		.social-links-container {
			padding: 12px 16px;
			align-items: flex-end;
		}

		#links {
			margin: 0;
			display: flex;
			align-items: flex-end;
			gap: 10px;
			flex: 1;
		}

		#links svg {
			width: 40px;
			height: 40px;
		}

		#email-container {
			padding: 0;
			display: flex;
			justify-content: flex-end;
			flex: 1;
		}

		#email svg {
			width: 56px;
			height: auto;
		}
	}
</style>
