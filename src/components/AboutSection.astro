	.about-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 6rem 2rem 2rem 2rem;
		position: relative;
		z-index: 3;
	}

	.about-card {
		position: relative;
		overflow: visible;
		border-radius: 0;
		padding: 0;
		max-width: none;
		width: min(92%, 560px);
		margin: 0 auto;
		z-index: 0;

		transform: perspective(900px) rotateX(0deg) rotateY(0deg);
		transform-style: preserve-3d;
		will-change: transform;
		transition:
